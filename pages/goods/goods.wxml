
<!--pages/order/order.wxml-->
<view class="goods">
  <view class="menu-wrapper" ref="menuWrapper">
    <view>
      <view wx:for="{{goods}}" class="menu-item border-1px" :class="{'current':currentIndex === index}">
        <view class="text">
          <view v-show="item.type>0" class=" icon" :class="classMap[item.type]"></view>{{item.name}}
        </view>
      </view>
    </view>
  </view>
  <view class="foods-wrapper" ref="foodWrapper">
    <view>
      <view wx:for="{{goods}}" class="food-list food-list-hook">
        <view class="title">{{item.name}}</view>
        <view>
          <view wx:for="{{item.foods}}" class="food-item" bindtap="selectFood(food, $event)" wx:for-item="food">
            <view class="icon">
              <image src="{{food.icon}}" style="width: 57px;height: 57px"></image>
            </view>
            <view class="content">
              <view class="name">{{food.name}}</view>
              <p class="desc">{{food.description}}</p>
              <view class="extra">
                <view class="count">月售{{food.sellCount}}</view>
                <view class="count">好评{{food.rating}}</view>
              </view>
              <view class="price">
                <view class="now">￥{{food.price}}</view>
                <view class="old" wx:if="{{food.oldPrice}}">￥{{food.oldPrice}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>